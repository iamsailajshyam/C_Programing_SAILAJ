// Online C compiler to run C program online
#include <stdio.h>

int main() {
    // Addition and avg of two numbers 
    int n1,n2,sum;
    
    printf("Enter a 1st number: ");
    scanf("%i",&n1);
    
    printf("Enter a 2nd number: ");
    scanf("%i",&n2);
    sum = n1+n2;
    int avg = ((n1+n2)/2);
    printf("Sum is : %i \n",sum);
    printf("Avg is : %i",avg);
    return 0;
}
